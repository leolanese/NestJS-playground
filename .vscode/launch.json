{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Program",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**/*.js"
      ],
      "preLaunchTask": "npm: build",
      "sourceMaps": true,
      "smartStep": true,
      "program": "${workspaceFolder}/src/main.ts",
      "console": "integratedTerminal",
    }
  ]
}